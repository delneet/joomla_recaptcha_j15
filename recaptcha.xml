<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="system">
	<name>System - Recaptcha v2 Plugin</name>
	<author>Daniel</author>
	<creationDate>January 2018</creationDate>
	<copyright>Copyright 2018</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>info@spookmedia.nl</authorEmail>
	<authorUrl>www.spookmedia.nl</authorUrl>
	<version>2.0.0</version>
	<description><![CDATA[reCaptcha v2 plugin for Joomla 1.5]]></description>
	<files>
		<filename plugin="recaptcha">recaptcha.php</filename>
		<filename>recaptcha/recaptchalib.php</filename>
		<filename>recaptcha/api.php</filename>
	</files>
	<params>
		<param type="text" name="public" default='' label="Public Key" />
		<param type="text" name="private" default='' label="Private Key" />
		<param type="radio" name="addToContact" default='1' label="Add to Contact Page">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>
